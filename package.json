{
  "private": true,
  "scripts": {
    "start": "yarn run storybook",
    "build": "lerna run build",
    "test": "run-s lint && jest --coverage && lerna run test",
    "update-snapshots": "jest -u && node .jest/hash-snapshots.js",
    "test:watch": "jest --watch --coverage",
    "lint": "eslint .",
    "version": "lerna version",
    "release": "cross-env HUSKY_BYPASS=true lerna publish from-git",
    "storybook": "NODE_ENV=development node storybook.js",
    "build-storybook": "NODE_ENV=production node .storybook/bootstrap.js && build-storybook -o .storybook-build --quiet"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.7.7",
    "@babel/core": "7.7.7",
    "@babel/plugin-proposal-class-properties": "7.7.4",
    "@babel/plugin-proposal-optional-chaining": "7.7.5",
    "@babel/plugin-transform-runtime": "7.7.6",
    "@babel/preset-env": "7.7.7",
    "@babel/preset-react": "7.7.4",
    "@storybook/addon-actions": "6.5.16",
    "@storybook/addon-contexts": "5.3.21",
    "@storybook/addon-knobs": "6.0.0-alpha.28",
    "@storybook/addon-links": "6.5.16",
    "@storybook/addon-storyshots": "5.3.21",
    "@storybook/addon-viewport": "5.3.21",
    "@storybook/react": "6.5.16",
    "@testing-library/react": "10.0.1",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.1.0",
    "babel-plugin-file-loader": "2.0.0",
    "babel-plugin-require-context-hook": "1.0.0",
    "babel-plugin-styled-components": "1.10.7",
    "change-case": "4.1.1",
    "cross-env": "7.0.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "enzyme-to-json": "3.4.4",
    "eslint": "6.5.1",
    "eslint-config-problems": "4.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "faker": "4.1.0",
    "graphql": "14.6.0",
    "graphql-request": "1.8.2",
    "graphql-tools": "4.0.8",
    "husky": "3.0.9",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.9.0",
    "jest-styled-components": "7.0.2",
    "lerna": "3.18.1",
    "lerna-changelog": "0.8.2",
    "lint-staged": "10.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "prettier-eslint-cli": "5.0.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "rollup": "1.28.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "webfontloader": "^1.6.28"
  }
}
